<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" styleClass="anchor-pane" stylesheets="@event-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="farmingdale.collocate.EventViewController">
    <children>

        <StackPane layoutX="50.0" layoutY="40.0" prefHeight="640.0" prefWidth="980.0" styleClass="glass-pane" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0">
            <children>
                <VBox spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                    <children>

                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <VBox>
                                    <children>
                                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Project Events">
                                            <font>
                                                <Font name="Inter Bold" size="28.0" />
                                            </font>
                                        </Text>
                                        <Label fx:id="subtitleLabel" text="3 tasks pending" textFill="#e4e4e4">
                                            <font>
                                                <Font name="Inter Regular" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <AnchorPane HBox.hgrow="ALWAYS" />

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="quickAddInput" promptText="New task name..." styleClass="glass-input" prefWidth="250.0"/>
                                        <Button mnemonicParsing="false" onAction="#handleQuickAdd" styleClass="glass-button-action" text="+ Add" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>

                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="glass-scroll-pane" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="eventListContainer" spacing="15.0">
                                    <padding>
                                        <Insets bottom="10.0" right="15.0" top="5.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>