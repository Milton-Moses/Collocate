<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" stylesheets="@login-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="farmingdale.collocate.LoginController">
   <children>
      <Label layoutX="117.0" layoutY="289.0" text="Collocate">
         <font>
            <Font size="96.0" />
         </font>
      </Label>
      <VBox layoutX="632.0" layoutY="260.0" prefHeight="200.0" prefWidth="230.0" spacing="20.0">
         <children>
            <TextField fx:id="usernameField" prefHeight="33.0" prefWidth="266.0" promptText="username...">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <TextField fx:id="passField" prefHeight="43.0" prefWidth="266.0" promptText="password...">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="330.0" spacing="20.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#goToCalendar" prefHeight="31.0" prefWidth="78.0" text="Login">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="registerButton" mnemonicParsing="false" onAction="#goToRegister" prefHeight="20.0" prefWidth="109.0" text="Register">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
